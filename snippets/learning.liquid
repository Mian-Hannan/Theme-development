{% comment %} Liquid Learning {% endcomment %}
<style>
  .wrapper {
    padding: 100px;
    font-weight: bold;
    font-size: 30px;
  }
</style>
<div class="wrapper">
  {% comment %} assign and captured are the keywords to make variablres {% endcomment %}
  {% assign mystring = 'Hello world!' %}
  {{ mystring }}
  {% capture mysecondstring %}
    This is My Second String
    {% endcapture %}
  {{ mysecondstring }}
  {% assign abc = "My Name is Hassan" %}
  {{ abc }}
  {% comment %} Conditonal Structure in Shopify Liquid {% endcomment %}
  {{ abc }}
   {% assign age_one = 35 %}
   {% assign age_two = 30 %}
   
   {{ age_two }}
   {% if age_one > age_two %}
    <p>something new</p>
    {{ age_one }}
   {% elseif age_one < age_two %}
     <p>something</p>
     {{ age_two }}
    {% endif %}

</div>
